            android:name="io.cordova.hellocordova.wxapi.WXEntryActivity"
            android:exported="true"
            android:label="@string/launcher_name"
            android:launchMode="singleTask"
            android:taskAffinity="io.cordova.hellocordova" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="wx4ec18e420fe44790" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.cordova.hellocordova.wxapi.WXPayEntryActivity"
            android:exported="true"
